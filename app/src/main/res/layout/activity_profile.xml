<!-- res/layout/fragment_profile.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_email_label"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_label"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/saveUsernameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_username_button"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout_button"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_account_button"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/addPaymentMethodButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_payment_button"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/helpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_button"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
